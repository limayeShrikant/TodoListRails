<h1> New Task </h1>



<div class="box-body">
    <%= bootstrap_form_for( :task ,url: tasks_path ) do |f| %>
        <%= f.text_field :todo, class: "form-control" %>

        <%= f.text_area :description %>

        <%= f.check_box :complete %>

        <%= f.submit "Add Task", class: "btn btn-warning"%>
    <% end %>

</div>